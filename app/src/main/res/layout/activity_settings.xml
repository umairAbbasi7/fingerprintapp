<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <!-- API Settings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API Base URL:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/apiUrlEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="https://api.fingerprint.com/"
            android:inputType="textUri"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API Timeout (seconds):"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/apiTimeoutEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="60"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Retries:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/maxRetriesEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="5"
            android:inputType="number"
            android:layout_marginBottom="24dp" />

        <!-- Detection Settings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detection Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/confidenceThresholdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confidence Threshold: 50%"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/confidenceThresholdSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/stabilityThresholdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stability Threshold: 80%"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/stabilityThresholdSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="80"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/qualityThresholdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quality Threshold: 70%"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/qualityThresholdSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="70"
            android:layout_marginBottom="24dp" />

        <!-- Camera Settings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <Switch
            android:id="@+id/useTorchSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use Torch"
            android:layout_marginBottom="8dp" />

        <Switch
            android:id="@+id/autoFocusSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto Focus"
            android:layout_marginBottom="24dp" />

        <!-- Debug Settings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debug Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <Switch
            android:id="@+id/debugModeSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Debug Mode"
            android:layout_marginBottom="8dp" />

        <Switch
            android:id="@+id/saveDebugImagesSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Debug Images"
            android:layout_marginBottom="24dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/resetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:background="@android:color/holo_blue_dark"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

</ScrollView> 